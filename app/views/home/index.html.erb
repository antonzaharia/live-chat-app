<% if notice %>
  <div class="flex flex-col gap-1 mt-3">
    <div class="alert alert-info shadow-lg flex-col text-sm p-3 rounded-lg">
      <%= notice %>
    </div>
  </div>
<% end %>

<section>
  <%= turbo_stream_from "chats" %>

  <%= turbo_frame_tag "chats" do %>
    <%= render @chats %>
  <% end %>
</section>
