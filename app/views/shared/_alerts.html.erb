<% if notice %>
  <div class="flex flex-col gap-1 mt-3">
    <div class="alert alert-info shadow-lg flex-col text-sm p-3 rounded-lg">
      <%= notice %>
    </div>
  </div>
<% end %>
<% if alert %>
  <div class="flex flex-col gap-1 mt-3">
    <div class="alert alert-error shadow-lg flex-col text-sm p-3 rounded-lg">
      <%= alert %>
    </div>
  </div>
<% end %>
