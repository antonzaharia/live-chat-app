<%= turbo_frame_tag "modal" do %>
  <dialog id="new_credential" class="modal" data-controller="modal" data-modal-target="modal">
    <div class="modal-box bg-primary text-gray-100 rounded-lg">
      <div class="flex justify-between">
        <h3 class="font-bold text-lg">New conversation</h3>
        <form method="dialog">
          <button class="btn btn-circle btn-outline btn-sm text-gray-100">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
          </button>
        </form>
      </div>
      <%= render partial: "chats/form", locals: { chat: @chat } %>
    </div>
  </dialog>
<% end %>
